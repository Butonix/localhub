FROM python:3.8.2-buster

ENV PYTHONUNBUFFERED 1
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONFAULTHANDLER=1
ENV PYTHONHASHSEED=random

RUN apt-get update && apt-get install -y postgresql gettext

COPY ./requirements/requirements.heroku.txt /requirements.txt

RUN pip install -r requirements.txt

WORKDIR /app
COPY . /app

RUN useradd -m user
USER user
